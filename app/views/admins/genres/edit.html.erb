<div>
	<h2>ジャンル編集</h2>

	<%= form_for @genre, :url => {action: 'update'} do |f| %>
	<div>
		ジャンル
		<%= f.text_field :name %>
		<%= f.radio_button :is_active, true %>
		<%= f.label :is_active, "有効", {value: :true} %>
		<%= f.radio_button :is_active, false %>
		<%= f.label :is_active, "無効", {value: :false} %>
		<%= f.submit "変更を保存する" %>
	</div>
	<% end %>
	<br>
	<div>
		<%= link_to "戻る", admins_genres_path %>
	</div>
</div>