<div>
	<div>
		<h2>ジャンル一覧・追加</h2>
		<%= form_for @genre, :url => {action: 'create'} do |f| %>
			<div>
		  		<i></i>ジャンル
		  		<%= f.text_field :name %>
		  		<%= f.radio_button :is_active, true %>
		  		<%= f.label :is_active, "有効", {value: :true} %>
		  		<%= f.radio_button :is_active, false %>
		  		<%= f.label :is_active, "無効", {value: :false} %>
		  		<%= f.submit "追加" %>
			</div>
		<% end %>
		<div>
			<table>
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					 	<tr>
					  		<td><%= genre.name %></td>

					  		<% if genre.is_active == true %>
					  			<td><i>有効</i></td>
					  		<% elsif genre.is_active == false %>
					  			<td><i>無効</i></td>
					  		<% end %>
					  		<td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>