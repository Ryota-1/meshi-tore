<div class="background-color">
<h2 class="head-line title_h2 text-center host_item_index">投稿レシピ一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>料理名</th>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @recipes.each do |recipe| %>
          <tr>
            <td class="items-info col-xs-1">
              <%= recipe.id %>
            </td>
            <td class="text-left">
              <%= link_to admins_recipe_path(recipe), class: "btn-link" do %>
                <%= recipe.name %>
              <% end %>
            </td>
            <td class="text-left col-xs-3">
              <%= recipe.genre.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>