<div class="row">
	<div class="col-xs-10 offset-xs-1">
		<h2>会員一覧</h2>
	<table class='table'>
      <thead>
        <tr>
      	  <th>画像</th>
          <th>名前</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
            <td><%= user.name %></td>
            <td><%= link_to '会員詳細', user, class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
	</div>
</div>