<div class="container my-5">
  <div class="background-color">
  <div class="row">
    <%= render '/layouts/genre_search', genres:@genres %>
    <div class="col-md-9">
      <h2 class="mt-5 d-inline-block">ジャンル検索</h2>(全<%= @recipes.count %>件)
      <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-md-3">
          <%= link_to users_recipe_path(recipe) do %>
            <%= attachment_image_tag( recipe, :image, size: "180x150" ) %><br>
            <p class="recipes-name"><strong><%= recipe.name %></strong>by <%= recipe.user.name %></p>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<div class="text-center">
<span class="paginate"><%= paginate(@recipes) %></span>
</div>