<div class="row">
	<div class="col-xs-12">
		<h1 class="head-line title_h1 text-center">レシピ新規投稿</h1>

		<%= form_for(@recipe, url: users_recipes_path, method: :post) do |f| %>
          <div class="col-xs-4 col-xs-offset-1">
          	<div class="item-image">
          	</div><br>
          	<%= f.attachment_field :image %>
          </div>
          <div class="col-xs-6">
			<h4>料理名</h4>
			<%= f.text_field :name %>

			<h4>材料</h4>
			<%= f.text_area :ingredient %>

			<h4>作り方</h4>
			<%= f.text_area :how_to_cook %>

			<h4>PFC</h4>
			<%= f.text_field :pfc %>

			<h4>ジャンル</h4>
			<%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>

			<%= f.submit '投稿', class: "btn btn-primary btn-lg pull-right" %>
		  </div>
		<% end %>
	</div>
</div>
